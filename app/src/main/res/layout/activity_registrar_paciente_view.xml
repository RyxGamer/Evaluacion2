<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarPacienteViewActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolbar"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rut_txt_tv"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_tv_paciente"
                android:layout_marginLeft="@dimen/margin_left_tv_paciente"
                android:layout_marginTop="@dimen/margin_top_tv_paciente"
                android:text="Ingrese Rut Paciente" />

            <EditText
                android:id="@+id/rut_txt"
                android:layout_width="144dp"
                android:layout_height="31dp"
                android:layout_marginStart="@dimen/margin_start_tv_paciente"
                android:layout_marginLeft="@dimen/margin_left_tv_paciente"
                android:hint="Rut Paciente"
                android:importantForAutofill="no"
                android:inputType="text" />

            <TextView
                android:id="@+id/nombre_txt_tv"
                android:layout_width="138dp"
                android:layout_height="35dp"
                android:layout_marginStart="@dimen/margin_start_tv_paciente"
                android:layout_marginLeft="@dimen/margin_left_tv_paciente"
                android:layout_marginTop="@dimen/margin_top_tv_paciente"
                android:text="Ingrese Nombre Paciente" />

            <EditText
                android:id="@+id/nombre_txt"
                android:layout_width="158dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_tv_paciente"
                android:layout_marginLeft="@dimen/margin_left_tv_paciente"
                android:hint="Nombre Paciente"
                android:importantForAutofill="no"
                android:inputType="text" />

            <TextView
                android:id="@+id/apellido_txt_tv"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_tv_paciente"
                android:layout_marginLeft="@dimen/margin_left_tv_paciente"
                android:layout_marginTop="@dimen/margin_top_tv_paciente"
                android:text="Ingrese Apellido Paciente" />

            <EditText
                android:id="@+id/apellido_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_tv_paciente"
                android:layout_marginLeft="@dimen/margin_left_tv_paciente"
                android:hint="Apellido Paciente"
                android:importantForAutofill="no"
                android:inputType="text" />

            <TextView
                android:id="@+id/fecha_txt_tv"
                android:layout_width="186dp"
                android:layout_height="39dp"
                android:layout_marginStart="@dimen/margin_start_tv_paciente"
                android:layout_marginLeft="@dimen/margin_left_tv_paciente"
                android:layout_marginTop="@dimen/margin_top_tv_paciente"
                android:text="Ingrese Fecha" />

            <Button
                android:id="@+id/fecha_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_tv_paciente"
                android:layout_marginLeft="@dimen/margin_left_tv_paciente"
                android:text="Fecha" />

            <EditText
                android:id="@+id/fecha_txt"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_tv_paciente"
                android:layout_marginLeft="@dimen/margin_left_tv_paciente"
                android:hint="01_01_2020"
                android:importantForAutofill="no"
                android:inputType="date" />

            <TextView
                android:id="@+id/area_txt_tv"
                android:layout_width="139dp"
                android:layout_height="31dp"
                android:layout_marginStart="@dimen/margin_start_tv_paciente"
                android:layout_marginLeft="@dimen/margin_left_tv_paciente"
                android:layout_marginTop="@dimen/margin_top_tv_paciente"
                android:text="Area de Trabajo" />

            <Spinner
                android:id="@+id/area_spinner"
                android:layout_width="142dp"
                android:layout_height="34dp"
                android:layout_marginStart="@dimen/margin_start_tv_paciente"
                android:layout_marginLeft="@dimen/margin_left_tv_paciente" />

            <TextView
                android:id="@+id/covid_txt_tv"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_tv_paciente"
                android:layout_marginLeft="@dimen/margin_left_tv_paciente"
                android:layout_marginTop="@dimen/margin_top_tv_paciente"
                android:text="¿Presenta síntomas de COVID-19?" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_left_tv_paciente"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/covid_switch_si"
                    android:layout_width="@dimen/width_tv_paciente"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_start_tv_paciente"
                    android:layout_marginLeft="@dimen/margin_left_tv_paciente"
                    android:layout_weight="1"
                    android:hint="Sí"
                    android:importantForAutofill="no"
                    android:inputType="number" />

                <Switch
                    android:id="@+id/covid_switch_no"
                    android:layout_width="@dimen/width_tv_paciente"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_start_tv_paciente"
                    android:layout_marginLeft="@dimen/margin_left_tv_paciente"
                    android:layout_weight="1"
                    android:hint="No"
                    android:importantForAutofill="no"
                    android:inputType="number" />
            </LinearLayout>

            <TextView
                android:id="@+id/temperatura_txt_tv"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_tv_paciente"
                android:layout_marginLeft="@dimen/margin_left_tv_paciente"
                android:layout_marginTop="@dimen/margin_top_tv_paciente"
                android:text="Ingrese Temperatura del Paciente" />

            <EditText
                android:id="@+id/temperatura_txt"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_tv_paciente"
                android:layout_marginLeft="@dimen/margin_left_tv_paciente"
                android:hint="Temperatura Paciente"
                android:importantForAutofill="no"
                android:inputType="number" />

            <TextView
                android:id="@+id/tos_txt_tv"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_tv_paciente"
                android:layout_marginLeft="@dimen/margin_left_tv_paciente"
                android:layout_marginTop="@dimen/margin_top_tv_paciente"
                android:text="¿Presenta tos?" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_left_tv_paciente"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/tos_switch_si"
                    android:layout_width="@dimen/width_tv_paciente"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_start_tv_paciente"
                    android:layout_marginLeft="@dimen/margin_left_tv_paciente"
                    android:layout_weight="1"
                    android:hint="Sí"
                    android:importantForAutofill="no"
                    android:inputType="number" />

                <Switch
                    android:id="@+id/tos_switch_no"
                    android:layout_width="@dimen/width_tv_paciente"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_start_tv_paciente"
                    android:layout_marginLeft="@dimen/margin_left_tv_paciente"
                    android:layout_weight="1"
                    android:hint="No"
                    android:importantForAutofill="no"
                    android:inputType="number" />
            </LinearLayout>

            <TextView
                android:id="@+id/presion_txt_tv"
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_tv_paciente"
                android:layout_marginLeft="@dimen/margin_left_tv_paciente"
                android:layout_marginTop="@dimen/margin_top_tv_paciente"
                android:text="Ingrese Presión Arterial del Paciente" />

            <EditText
                android:id="@+id/presion_txt"
                android:layout_width="150dp"
                android:layout_height="13dp"
                android:layout_marginStart="@dimen/margin_start_tv_paciente"
                android:layout_marginLeft="@dimen/margin_left_tv_paciente"
                android:hint="Presión Arterial Paciente"
                android:importantForAutofill="no"
                android:inputType="number" />

            <Button
                android:id="@+id/registrar_btn"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:text="Registrar" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>